{
  "name": "tools-repo-dev",
  "private": true,
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.0",
    "@commitlint/cli": "^17.0.0",
    "husky": "^8.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "commitlint": "commitlint --from=HEAD~1",
    "lint": "pnpm run lint:frontend && pnpm run lint:css && pnpm run lint:backend",
    "lint:fix": "pnpm run lint:fix:frontend && pnpm run lint:css:fix && pnpm run lint:fix:backend",
    "lint:css": "cd frontend && pnpm run lint:css",
    "lint:css:fix": "cd frontend && pnpm run lint:css:fix",
    "lint:fix:frontend": "cd frontend && pnpm run lint:fix",
    "lint:fix:backend": "cd backend && cargo clippy --fix -- -D warnings",
    "lint:frontend": "cd frontend && pnpm run lint",
    "lint:backend": "cd backend && cargo clippy -- -D warnings",
    "format": "pnpm run format:frontend && pnpm run format:backend",
    "format:frontend": "cd frontend && npx prettier --write .",
    "format:backend": "cd backend && cargo fmt"
  }
}
