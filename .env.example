# Environment Configuration for Tools Application
# Copy this file to .env and customize as needed

# ===========================
# Port Configuration
# ===========================

# Backend API Port (default: 3001)
BACKEND_PORT=3001

# Frontend Web Port (default: 3000)
FRONTEND_PORT=3000

# ===========================
# Backend Configuration
# ===========================

# Logging level (trace, debug, info, warn, error)
RUST_LOG=info

# Allowed CORS Origins (comma-separated)
# For development: http://localhost:3000,http://localhost:3001
# For production: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ===========================
# Frontend Configuration
# ===========================

# Backend API URL
# For Docker: http://backend:3001
# For local development: http://localhost:3001
# For production: https://api.yourdomain.com
NEXT_PUBLIC_API_URL=http://backend:3001

# Base path for Next.js (leave empty for root deployment)
# Example for subdirectory: /tools
NEXT_PUBLIC_BASE_PATH=

# Build configuration
# Set to 'true' for static export (GitHub Pages)
BUILD_STATIC=false

# ===========================
# Docker Configuration
# ===========================

# Container restart policy
# Options: no, always, on-failure, unless-stopped
RESTART_POLICY=unless-stopped

# ===========================
# Production Configuration
# ===========================

# Node environment (development, production)
NODE_ENV=production

# Enable production optimizations
NEXT_TELEMETRY_DISABLED=1
